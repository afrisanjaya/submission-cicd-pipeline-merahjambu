pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('golang-app', '-f Dockerfile.builder .')
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    docker.image('golang-app').inside {
                        sh 'go version'
                        sh 'go test -v ./...'
                    }
                }
            }
        }

        stage('Build Final Image') {
            steps {
                script {
                    docker.build('golang-app-final', '-f Dockerfile.final .')
                }
            }
        }
    }
}
