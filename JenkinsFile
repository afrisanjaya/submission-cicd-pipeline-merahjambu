pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('golang-app', '-f Dockerfile.builder .')
                }
            }
        }

        stage('Build Final Image') {
            steps {
                script {
                    docker.build('golang-app-final', '-f Dockerfile.final .')
                }
            }
        }
    }
}
